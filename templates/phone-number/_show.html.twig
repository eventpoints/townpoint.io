<div class="list-group-item">
    <div data-controller="copy"
         data-copy-success-content="<span class='mdi mdi-check-bold text-success'></span>">
        <div class="h5 m-0 d-flex align-items-center">
            {% if phoneNumber.isDefault %}
                <span class="mdi mdi-check-circle text-primary me-2" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="{{ 'default'|trans }}"></span>
            {% endif %}
            <div class="me-2" data-copy-target="source" >
                {{ phoneNumber.countryCode }}{{ phoneNumber.content }}
            </div>
            <a class="btn-link link-primary" type="button"
               data-action="copy#copy"
               data-copy-target="button">
                <span class="mdi mdi-content-copy" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="{{ 'copy'|trans }}"></span>
            </a>
        </div>
        <div class="d-flex justify-content-between align-items-end">
            <div class="small">{{ phoneNumber.createdAt|format_date }}</div>
            <div class="btn-group">
                <a href="{{ path('edit_phone_number', {id: phoneNumber.id}) }}" class="btn btn-outline-primary">
                    <span class="h5 mdi mdi-pencil-circle"></span>
                </a>
                <a href="#" class="btn btn-outline-danger">
                    <span class="h5 mdi mdi-close-circle"></span>
                </a>
            </div>
        </div>
    </div>
</div>