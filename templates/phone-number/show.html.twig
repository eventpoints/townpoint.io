<turbo-frame id="phone-number-{{ phoneNumber.id }}-frame">
    <div class="card h-100">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="h5 m-0">{{ phoneNumber.countryCode }} {{ phoneNumber.content }}</div>
                <div>
                    <span class="mdi mdi-check-circle fs-3 text-primary"></span>
                </div>
            </div>
            <div class="small">{{ phoneNumber.createdAt|format_date }}</div>
        </div>
        <div class=" card-footer d-flex justify-content-end align-items-center">
            <div>
                <a class="btn btn-outline-primary"
                   href="{{ path('edit_phone_number', {id: phoneNumber.id }) }}" data-turbo-frame="_self">
                    <span class="mdi mdi-pencil"></span>
                </a>
                <a class="btn btn-outline-danger"
                   href="{{ path('delete_phone_number', {id: phoneNumber.id }) }}" data-turbo-frame="_self">
                    <span class="mdi mdi-delete"></span>
                </a>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                </div>

            </div>
        </div>
    </div>
</turbo-frame>