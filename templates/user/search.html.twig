{% for user in users %}
    <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
            <div class="d-flex justify-content-start align-items-start">
                <a class="link-dark text-decoration-none"
                   href="{{ path('user_profile', {handle: user.handle}) }}">
                    <img height="35" class="rounded-circle border me-2"
                         src="{{ user.avatar }}"/>
                </a>
                <div>
                    <div>
                        <a class="link-dark text-decoration-none"
                           href="{{ path('user_profile', {handle: user.handle}) }}">
                            {{ user.fullName }}
                        </a>
                    </div>
                    <div>@{{ user.handle }}</div>
                </div>
            </div>
        </div>
        <div>
            <input style="font-size: 30px" class="form-check-input" type="checkbox" id="user-{{ user.id }}" name="users[]" value="{{ user.id }}">
        </div>
    </div>
{% else %}
    <div class="list-group-item text-center text-muted">
        <div class="mdi mdi-robot-dead fs-3"></div>
        <div>Nope, we got nothing...</div>
    </div>
{% endfor %}
