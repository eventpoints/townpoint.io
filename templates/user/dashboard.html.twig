{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row g-3 justify-content-center">
            <div class="col-12 col-md-6">
                <div class="row g-2">
                    <div class="col-6 col-md-6">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div class="m-0 fw-bold text-center">{{ 'feed'|trans|capitalize }}</div>
                                <i class="mdi mdi-account-group-outline fs-4"></i>
                            </div>
                            <a class="stretched-link" href="{{ path('feed') }}"></a>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div class="m-0 fw-bold text-center">{{ 'profile'|trans|capitalize }}</div>
                                <i class="mdi mdi-account-circle-outline fs-4"></i>
                            </div>
                            <a class="stretched-link" href="{{ path('profile', {id: app.user.id}) }}"></a>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div class="m-0 fw-bold text-center">{{ 'conversations'|trans|capitalize }}</div>
                                <i class="mdi mdi-message-outline fs-4"></i>
                            </div>
                            <a class="stretched-link" href="{{ path('conversations') }}"></a>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div class="m-0 fw-bold text-center">{{ 'account'|trans|capitalize }}</div>
                                <i class="mdi mdi-bank-outline fs-4"></i>
                            </div>
                            <a class="stretched-link" href="{{ path('account') }}"></a>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div class="m-0 fw-bolder text-center">{{ 'listeners'|trans|capitalize }}</div>
                                <i class="mdi mdi-graph-outline fs-4"></i>
                            </div>
                            <a class="stretched-link" href="{{ path('listeners') }}"></a>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div class="m-0 fw-bolder text-center text-danger">{{ 'logout'|trans|capitalize }}</div>
                                <i class="mdi mdi-logout fs-4"></i>
                            </div>
                            <a class="stretched-link" href="{{ path('app_logout') }}"></a>
                        </div>
                    </div>
                    <div class="col-12 col-md-12">
                        <div class="card my-3">
                            <div class="card-body">
                                <turbo-frame id="mode-form-frame" src="{{ path('set_mode') }}" target="_top">
                                    <div class="d-flex justify-content-center">
                                        <div class="spinner-border" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                </turbo-frame>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-12 col-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <turbo-frame id="user-account-qr-frame" src="{{ path('user_account_qr') }}" loading="lazy">
                            <div class="d-flex justify-content-center">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </turbo-frame>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}