{% extends 'base.html.twig' %}

{# where the phone numbers are displayed #}

{% block body %}
    <div class="container">
        <div class="row g-2 justify-content-center">
            <div class="col-12 col-md-3">
                <div class="card">
                    <div class="card-body">
                        <nav class="nav nav-pills flex-column" id="account-menu">
                            <a class="flex-sm-fill text-sm-center nav-link active" id="v-pills-home-tab" data-bs-toggle="pill"
                               data-bs-target="#account" href="#account" type="button" role="tab"
                               aria-controls="account">{{ 'account'|trans|upper }}</a>

                            <a class="flex-sm-fill text-sm-center nav-link" id="v-pills-settings-tab" data-bs-toggle="pill"
                               data-bs-target="#addresses"
                               href="#addresses"
                               type="button" role="tab" aria-controls="addresses">{{ 'addresses'|trans|upper }}</a>

                            <a class="flex-sm-fill text-sm-center nav-link" id="v-pills-settings-tab" data-bs-toggle="pill"
                               data-bs-target="#phone-numbers" href="#phone-numbers" type="button" role="tab"
                               aria-controls="phone-numbers">{{ 'phone-numbers'|trans|upper }}</a>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-9">
                <div class="tab-content" id="account-menu-tab-content">
                    <div class="tab-pane fade show active" id="account" role="tabpanel"
                         aria-labelledby="v-pills-home-tab" tabindex="0">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-3">
                                <div class="card mb-3">
                                    <img class="img-fluid rounded w-100" src="{{ app.user.avatar }}"/>
                                </div>
                            </div>
                            <div class="col-12 col-md-8">
                                {{ form_start(userForm) }}
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h5>{{ 'account-information'|trans }}</h5>

                                        <div class="input-group">
                                            {{ form_row(userForm.firstName) }}
                                            {{ form_row(userForm.lastName) }}
                                        </div>

                                        <div class="row">
                                            <div class="col-12 col-md-8">
                                                <div class="input-group">
                                                    {{ form_row(userForm.email) }}
                                                    {% if app.user.isEnabled %}
                                                        <span class="position-absolute top-0 start-100 translate-middle">
                                                        <span class="h5 mdi mdi-check-circle text-primary"></span>
                                                    </span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-4">
                                                {{ form_row(userForm.age) }}
                                            </div>
                                        </div>

                                        {{ form_row(userForm.avatar) }}

                                        <div class="row">
                                            <div class="col-12 col-md-4">
                                                {{ form_row(userForm.language) }}
                                            </div>
                                            <div class="col-12 col-md-4">
                                                {{ form_row(userForm.timezone) }}
                                            </div>
                                            <div class="col-12 col-md-4">
                                                {{ form_row(userForm.currency) }}
                                            </div>
                                        </div>

                                        <div class="input-group">
                                            {{ form_row(userForm.countryOfOrigin) }}
                                            {{ form_row(userForm.currentCountry) }}
                                        </div>

                                        {{ form_row(userForm.description) }}

                                        <div class="d-flex justify-content-between">
                                            <button class="btn btn-outline-danger w-25">{{ 'delete-account'|trans }}</button>
                                            <button class="btn btn-outline-primary w-25"
                                                    type="submit">{{ 'save'|trans }}</button>
                                        </div>
                                    </div>
                                </div>
                                {{ form_end(userForm) }}
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="addresses" role="tabpanel"
                         aria-labelledby="v-pills-home-tab" tabindex="0">
                        <div class="list-group mb-3">
                            {% for address in app.user.addresses %}
                                {{ include('address/_show.html.twig') }}
                            {% endfor %}
                        </div>
                        <div class="text-center">
                            <a href="{{ path('create_address') }}" class="btn btn-outline-primary">
                                {{ 'add-address'|trans }}
                            </a>
                        </div>

                    </div>
                    <div class="tab-pane fade" id="phone-numbers" role="tabpanel" aria-labelledby="v-pills-profile-tab"
                         tabindex="0">
                        <div class="card-body row g-2">
                            <div class="list-group mb-3">
                                {% for phoneNumber in app.user.phoneNumbers %}
                                    {{ include('phone-number/_show.html.twig') }}
                                {% endfor %}
                            </div>
                            <div class="text-center">
                                <a href="{{ path('create_phone_number') }}" class="btn btn-outline-primary">add
                                    phone</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
{% endblock %}