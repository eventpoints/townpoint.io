{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-4">
                {{ form_start(avatarForm) }}
                <div class="card">
                    <div class="card-body">
                        {{ form_row(avatarForm.avatar) }}
                    </div>
                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-outline-dark">{{ 'save'|trans }}</button>
                    </div>
                </div>
                {{ form_end(avatarForm) }}
            </div>
        </div>
    </div>
{% endblock %}