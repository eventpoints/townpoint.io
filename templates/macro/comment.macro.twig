{% macro comment(comment) %}
    <div class="card mb-2">
        <div class="card-header d-flex justify-content-between align-items-center sticky-top">
            <div>
                <a href="{{ path('profile', {id: comment.owner.id}) }}"
                   class="d-flex align-items-center">
                    <img src="{{ comment.owner.avatar }}" width="40"
                         class="rounded-circle me-3"/>
                    <div>
                        <div class="fw-bold m-0">{{ comment.owner.fullName }}</div>
                        <div class="small text-muted">{{ comment.createdAt|format_datetime('short', 'short', 'dd.MM.yy @H:mm', app.user.timezone) }}</div>
                    </div>
                </a>
            </div>
            <div class="dropdown">
                <button class="btn link-dark" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    <span class="mdi mdi-dots-vertical fs-4"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                       {{ include('comment/_delete_form.html.twig') }}
                    </li>
                </ul>
            </div>

        </div>
        <div class="card-body">
            <div>{{ comment.content|raw }}</div>
        </div>
    </div>
{% endmacro %}
