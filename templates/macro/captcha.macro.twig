{% macro widget() %}
    <div class="my-5">
        <style>
            .captcha-number, .required-number {
                padding: 10px;
                border-radius: 50%;
                color: #ffffff;
            }

            .captcha-viewport {
                padding: 1rem 0;
                overflow: hidden;
                position: relative;
                display: flex;
                flex-wrap: wrap;
                justify-content: space-evenly;
                background-color: #eeeeee;
                border-radius: 0.5rem;
            }

            .captcha-target-numbers {
                padding: 1rem;
                display: flex;
                flex-wrap: wrap;
                justify-content: space-evenly;
                background-color: #eeeeee;
                border-radius: 0.5rem;
                margin-top: 0.5rem;
            }
        </style>
        <div {{ stimulus_controller('captcha') }}>
            <div class="captcha-viewport" {{ stimulus_target('captcha','view') }}></div>
            <div class="captcha-target-numbers" {{ stimulus_target('captcha','numbersDisplay') }}></div>
        </div>
    </div>
{% endmacro %}