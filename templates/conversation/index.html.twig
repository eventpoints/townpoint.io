{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">

            <div class="row justify-content-center g-1">
                <div class="col-12 col-md-4">
                    <div class="list-group">
                        <div class="list-group-item">
                            <div class="fs-4">{{ 'conversations'|trans }}</div>
                        </div>
                        {% for conversation in app.user.conversations %}
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div>{{ conversation.title|title }}</div>
                                    <div>
                                        {% for participant in conversation.conversationParticipants %}
                                            <span class="badge text-bg-light">{{ participant.owner.fullName|title }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div>
                                    <a class="btn btn-outline-dark rounded-pill"
                                       href="{{ path('show_conversation', {id: conversation.id}) }}">
                                        <span class="mdi mdi-arrow-right fs-4"></span>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>


        </div>
    </div>
{% endblock %}