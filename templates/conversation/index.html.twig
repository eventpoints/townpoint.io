{% extends 'base.html.twig' %}
{% import 'macro/checkbox-autocomplete.macro.twig' as marco %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">

            <div class="row justify-content-center g-1">
                <div class="col-12 col-md-5">

                    <div class="d-flex justify-content-end gap-1 mb-3">
                        <a class="btn btn-outline-dark rounded-pill d-flex justify-content-between align-items-center"
                           href="#create-conversation-modal" data-bs-toggle="modal"
                           data-bs-target="#create-conversation-modal">
                            <span class="mdi mdi-plus fs-4"></span>
                        </a>
                    </div>

                    <div class="list-group">
                        <div class="list-group-item">
                            <div class="fs-4">{{ 'conversations'|trans }}</div>
                        </div>
                        {% for conversation in app.user.conversations %}
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div>{{ conversation.title|title }}</div>
                                    <div>
                                        {% for participant in conversation.conversationParticipants %}
                                            <span class="badge text-bg-light">{{ participant.owner.fullName|title }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="dropdown me-2">
                                        <a class="btn btn-outline-dark rounded-pill"
                                           type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                           href="{{ path('show_conversation', {id: conversation.id}) }}">
                                            <span class="mdi mdi-dots-vertical fs-4"></span>
                                        </a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item text-danger"
                                               href="{{ path('delete_conversation', {id: conversation.id, token: csrf_token(conversation.id)}) }}">{{ 'delete'|trans }}</a>
                                        </div>
                                    </div>
                                    <a class="btn btn-outline-dark rounded-pill"
                                       href="{{ path('show_conversation', {id: conversation.id}) }}">
                                        <span class="mdi mdi-arrow-right fs-4"></span>
                                    </a>
                                </div>
                            </div>
                        {% else %}
                            <div class="list-group-item text-center text-muted">
                                Oh so empty
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

        </div>
    </div>


    <div class="modal fade" id="create-conversation-modal" tabindex="-1" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">{{ 'create-conversastion'|trans }}</div>
                <div class="list-group list-group-flush">
                    {{ marco.autocomplete(
                        'create_conversation',
                        'user_search'
                    ) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}