{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center align-content-center g-5 mt-5">
            <div class="col-md-4">
                <div class="fs-1">
                    Where Global Friendships Meet.
                </div>
                <hr/>

                <div class="lead">
                    Find friends and make lasting connections around the world
                </div>

            </div>
            <div class="col-md-4">
                {{ form_start(registrationForm) }}
                <div class="card shadow">
                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    <div class="card-body">
                        <div class="text-end">
                            <h1 class="h3 mb-3 font-weight-normal">{{ 'register'|trans|title }}</h1>
                        </div>
                    </div>
                    <div class="card-body">
                        {{ form_row(registrationForm.firstName) }}
                        {{ form_row(registrationForm.lastName) }}
                        <div class="hstack gap-3">
                            {{ form_row(registrationForm.bornAt) }}
                            {{ form_row(registrationForm.gender) }}
                        </div>
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.currentCountry) }}
                        {{ form_row(registrationForm.originCountry) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                    </div>
                    <div class="card-footer text-center text-muted small">
                        By continuing you agree to our <a href="#">terms & conditions</a>
                    </div>
                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-dark">Register</button>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}