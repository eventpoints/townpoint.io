{% import "macro/user.component.macro.twig" as userComponent %}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-4">
                <div class="list-group">
                    <div class="h5 m-0 list-group-item d-flex justify-content-between align-items-center">
                        <div>{{ 'listeners'|trans|capitalize }}</div>
                        <div class="badge bg-primary rounded-pill">
                            {{ app.user.listeners.count }} / 150
                        </div>
                    </div>
                    {% for  listener in app.user.listeners %}
                        {{ userComponent.userlistItem(listener.owner) }}
                    {% endfor %}
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="list-group">
                    <div class="h5 m-0 list-group-item d-flex justify-content-between align-items-center">
                        <div>{{ 'listening'|trans|capitalize }}</div>
                        <div class="badge bg-primary rounded-pill">
                            {{ app.user.listening.count }} / 30
                        </div>
                    </div>
                    {% for listener in app.user.listening %}
                        {{ userComponent.userlistItem(listener.target) }}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}