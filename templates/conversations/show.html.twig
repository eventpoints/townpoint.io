{% import "macro/user.component.macro.twig" as userComponent %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mb-3">
            <div>
                <a class="btn btn-primary btn-sm" href="{{ path('conversations') }}">
                    <i class="bi bi-arrow-left-short fs-3"></i>
                </a>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush zi-0">
                        {% for user in conversation.users %}
                            {{ userComponent.userlistItem(user) }}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="card mb-3">
                    <div class="border-bottom">
                        <div class="dropdown text-end">
                            <button class="btn btn-link" type="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li class="zi-100">
                                    <a class="dropdown-item text-danger"
                                       href="#">
                                        {{ 'delete'|trans }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="messages" {{ stimulus_controller('messages') }}
                            {{ stimulus_action('messages', 'scroll', 'scroll') }}>
                        {% for message in conversation.messages %}
                            {% if app.user == message.user %}
                                <div class="d-flex justify-content-end">
                                    <div class="col-md-9">
                                        <div class="bg-grey text-black rounded-2 p-2">{{ message.content }}</div>
                                        <div class="xtra-small text-muted">{{ message.createdAt|format_date }}</div>
                                    </div>
                                    <div class="col-md-1 d-flex justify-content-end">
                                        <img class="rounded-circle object-fit-cover sticky-top shadow-sm ms-2  zi-0"
                                             height="40"
                                             width="40" alt="{{ message.user.fullName }}"
                                             src="{{ message.user.avatar }}"/>
                                    </div>
                                </div>
                            {% else %}
                                <div class="d-flex justify-content-start mb-2">
                                    <div class="col-md-2">
                                        <img class="rounded-circle object-fit-cover sticky-top shadow-sm zi-0"
                                             height="40"
                                             width="40" alt="{{ message.user.fullName }}"
                                             src="{{ message.user.avatar }}"/>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="bg-grey text-black rounded-2 p-2">{{ message.content }}</div>
                                        <div class="xtra-small text-muted">{{ message.createdAt|format_date }}</div>
                                    </div>
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="text-muted text-center">{{ 'no-messages'|trans }}</div>
                        {% endfor %}
                    </div>
                    <div class="border-top position-relative">
                        {{ form_start(messageForm) }}
                        {{ form_row(messageForm.content) }}
                        <button type="submit" class="btn btn-primary bottom-right">
                            {{ 'send'|trans }}
                        </button>
                        {{ form_end(messageForm) }}
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-3">
                ADS
            </div>
        </div>
    </div>
{% endblock %}