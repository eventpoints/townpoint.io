<form method="post" action="{{ path('conversation_delete', {'id': conversation.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conversation.id) }}">
    <button type="submit" class="w-100 btn btn-outline-danger d-flex justify-content-between">
        <span><i class="mdi mdi-delete text-danger"></i></span>
        <span>{{ 'delete'|trans }}</span>
    </button>
</form>