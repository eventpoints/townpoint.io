<turbo-frame id="search-form-frame">
    {{ form_start(searchForm, {
        action: path('search')
    }) }}

    <div class="input-group">
        {{ form_widget(searchForm.keyword) }}
        <button type="submit" class="btn btn-outline-secondary">
            <span class="mdi mdi-magnify"></span>
        </button>
    </div>
    {{ form_end(searchForm) }}
</turbo-frame>