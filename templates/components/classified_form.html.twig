<div {{ attributes }}>
    <div class="card mb-5">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <div>
                    <h5>{{ 'create-classified-listing'|trans }}</h5>
                </div>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="card-body">
            {{ form_row(form.title) }}
        </div>

        <div class="row justify-content-start g-2 mx-2">
            {% for key, itemForm in form.items %}
                <div class="col-12 col-md-6 col-lg-6 col-xl-6 col-xxl-6">
                    <div class="card shadow h-100">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="h5 m-0">Item {{ loop.index }}</div>
                                {% if loop.index0 > 0 %}
                                    <div>
                                        {{ form_row(itemForm.vars.button_delete, { label: ' ', row_attr: {class: 'm-0'}, attr: { class: 'btn btn-danger mdi mdi-close' } }) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-body">
                            {{ form_row(itemForm.title) }}
                            {{ form_row(itemForm.images, {label: false}) }}
                            <div class="row g-2">
                                <div class="col-6">
                                    {{ form_row(itemForm.price) }}
                                </div>
                                <div class="col-6">
                                    {{ form_row(itemForm.condition) }}
                                </div>
                            </div>
                            {{ form_row(itemForm.description) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center mt-3">
            {% if form.items|length < 10 %}
                {{ form_widget(form.items.vars.button_add, { label: 'add item', class: 'btn btn-outline-primary'  }) }}
            {% endif %}
            <button type="submit" class="btn btn-primary">
                {{ 'save'|trans }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
